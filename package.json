{
  "name": "@actualwave/type-checkers",
  "description": "Framework for parameter/value analysis on access or mutation, used for type check in runtime.",
  "version": "0.1.12",
  "main": "dist/type-checkers.js",
  "keywords": [
    "js",
    "javascript"
  ],
  "homepage": "https://github.com/burdiuz/js-lib-environment",
  "bugs": {
    "url": "https://github.com/burdiuz/js-lib-environment/issues",
    "email": "burdiuz@gmail.com"
  },
  "license": "MIT",
  "author": "Oleg Galaburda <burdiuz@gmail.com> (http://actualwave.com/)",
  "repository": {
    "type": "git",
    "url": "https://github.com/burdiuz/js-lib-environment.git"
  },
  "dependencies": {
    "@actualwave/has-own": "^0.0.1"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-istanbul": "^4.1.6",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-jest": "^22.4.3",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.8.2",
    "flow-bin": "^0.72.0",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "lint-staged": "^7.1.0",
    "prettier": "^1.12.1",
    "rollup-plugin-babel": "^3.0.4",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-json": "^3.0.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-serve": "^0.4.2",
    "rollup-plugin-uglify": "^3.0.0",
    "uglify-es": "^3.3.9"
  },
  "lint-staged": {
    "source/**/*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailing-comma": "es5",
    "arrowParens": "always",
    "parser": "flow"
  },
  "babel": {
    "env": {
      "test": {
        "plugins": [
          "babel-plugin-transform-es2015-modules-commonjs",
          "babel-plugin-transform-flow-strip-types",
          "babel-plugin-transform-class-properties",
          [
            "babel-plugin-transform-object-rest-spread",
            {
              "useBuiltIns": true
            }
          ]
        ],
        "presets": [
          "jest"
        ]
      }
    }
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "lcov"
    ],
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "source/**/*.js",
      "!**/node_modules/**",
      "!**/vendor/**"
    ]
  },
  "scripts": {
    "start": "build",
    "build": "rollup --config",
    "build:watch": "rollup --config --watch \"./source\"",
    "lint": "./node_modules/.bin/eslint \"source/**/*.js\"",
    "flow": "./node_modules/.bin/flow",
    "server": "rollup --config rollup.serve.js",
    "test": "jest --colors",
    "test:watch": "jest --colors --watch",
    "lint-staged": "lint-staged",
    "precommit": "npm run build && npm run test && npm run lint-staged"
  }
}
